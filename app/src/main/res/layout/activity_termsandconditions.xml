<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".termsandconditions">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backbtnn"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:alpha="0.9"
                app:srcCompat="@drawable/terms" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="284dp"
                android:layout_height="69dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arialbd"
                android:text="Our Commitment to Privacy Policy"
                android:textColor="#0F0E0E"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:justificationMode="inter_word"
                android:text="At Social Guard, we prioritize your privacy. We are committed to safeguarding your personal information and ensuring that your data is protected. Our privacy policy outlines how we collect, use, and protect your information."
                android:textColor="#494343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="347dp"
                android:layout_height="27dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arialbd"
                android:text="1: Acceptence of Terms"
                android:textColor="#0F0E0E"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="347dp"
                android:layout_height="78dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="By using the Social Guard app, you agree to comply with and be bound by our terms and conditions. These terms govern your use of our services and outline your rights and responsibilities."
                android:textColor="#494343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="346dp"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arialbd"
                android:text="2: Service Provided"
                android:textColor="#0F0E0E"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="347dp"
                android:layout_height="102dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="Social Guard offers a service that automatically detects and removes hate comments from your social media posts on Instagram and Facebook. Our goal is to create a positive and supportive online environment for all users."
                android:textColor="#494343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="345dp"
                android:layout_height="26dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arialbd"
                android:text="3: User conduct"
                android:textColor="#0F0E0E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="347dp"
                android:layout_height="98dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="Users are expected to use Social Guard responsibly and respectfully. Any misuse of the app or violation of our terms will result in appropriate action, including potential suspension or termination of your account."
                android:textColor="#494343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="379dp"
                android:layout_height="30dp"
                android:fontFamily="@font/arialbd"
                android:paddingLeft="30dp"
                android:paddingTop="5dp"
                android:text="4: Account Security"
                android:textColor="#0F0E0E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="348dp"
                android:layout_height="101dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:paddingTop="5dp"
                android:text="You are responsible for maintaining the confidentiality of your account information, including your username and password. Notify us immediately if you suspect any unauthorized use of your account."
                android:textColor="#494343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="349dp"
                android:layout_height="27dp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/arialbd"
                android:text="5: Data Security and Privacy"
                android:textColor="#0F0E0E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="345dp"
                android:layout_height="103dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="We implement robust security measures to protect your data. However, no system is completely secure. By using Social Guard, you acknowledge and accept the risks associated with data transmission and storage."
                android:textColor="#494343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="343dp"
                android:layout_height="28dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arialbd"
                android:text="6: Change to Terms"
                android:textColor="#0F0E0E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="343dp"
                android:layout_height="223dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="We may update our terms and conditions from time to time. Any changes will be communicated to you via email or through our app. Continued use of Social Guard after such changes indicates your acceptance of the revised terms."
                android:textColor="#494343"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="406dp"
        android:layout_height="100dp"
        android:background="#0FFFFFFF"
        app:cardBackgroundColor="#EFE7E7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="347dp"
            android:layout_height="38dp"
            android:layout_gravity="center|top"
            android:text="By accepting,you agree to our Privacy Policy and Terms of Service" />

        <Button
            android:id="@+id/declinebutton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="44dp"
            android:background="#3C2E2E"
            android:text="Decline"
            android:textColor="#CABDBD"
            android:textStyle="bold" />

        <Button
            android:id="@+id/acceptbutton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="44dp"
            android:background="#0ec5bb"
            android:shadowColor="#4E4A4A"
            android:text="Accept"

            android:textColor="@color/white"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>