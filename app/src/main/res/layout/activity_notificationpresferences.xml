<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NotificationpresferencesActivity">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_1" />


    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bakbtn" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:gravity="top"
        android:text="Notification Preferences"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="364dp"
        android:layout_height="365dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:padding="8dp"
        app:cardBackgroundColor="#fbfbfb"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="354dp"
                android:layout_height="70dp"
                android:paddingLeft="8dp"
                android:text="Receive Email Notification"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/line" />

            <Switch
                android:id="@+id/switch4"
                android:layout_width="354dp"
                android:layout_height="69dp"
                android:paddingLeft="8dp"
                android:text="Push Notification"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/line" />

            <Switch
                android:id="@+id/switch5"
                android:layout_width="354dp"
                android:layout_height="69dp"
                android:paddingLeft="8dp"
                android:text="SMS Alerts"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView43"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/line" />

            <Switch
                android:id="@+id/switch6"
                android:layout_width="354dp"
                android:layout_height="69dp"
                android:paddingLeft="8dp"
                android:text="Weekly Summary"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView44"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/line" />

            <Switch
                android:id="@+id/switch7"
                android:layout_width="354dp"
                android:layout_height="66dp"
                android:paddingLeft="8dp"
                android:text="Promotion Notifications"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>